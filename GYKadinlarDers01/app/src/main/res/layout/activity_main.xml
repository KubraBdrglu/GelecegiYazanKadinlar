<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="#7986CB"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eniserkaya.gykadnlar.MainActivity">


    <Button
        android:id="@+id/login_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Giriş Yap"
        android:layout_alignRight="@+id/sifre_et_id"
        android:layout_alignEnd="@+id/sifre_et_id"
        android:layout_alignLeft="@+id/sifre_et_id"
        android:layout_alignStart="@+id/sifre_et_id"
        android:textColor="#FFFFFF"/>

    <EditText
        android:id="@+id/sifre_et_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_btn_id"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Şifreniz"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/kadi_et_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Kullanıcı Adı"
        android:layout_above="@+id/sifre_et_id"
        android:layout_alignLeft="@+id/sifre_et_id"
        android:layout_alignStart="@+id/sifre_et_id" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_above="@+id/kadi_et_id"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile"
        />

    <Button
        android:id="@+id/uye_ol_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="ÜYE OL" />
</RelativeLayout>
